{
  "compilerOptions": {
    "target": "ES2022", // Specifies the ECMAScript target version for the compiled JavaScript.
    "module": "NodeNext", // Sets the module code generation method, compatible with Node.js's native ESM support.
    "moduleResolution": "NodeNext", // Determines how modules are resolved, using Node.js's ESM resolution algorithm.
    "lib": ["ES2022", "DOM"], // Includes the specified library files in the compilation, providing type definitions for ES2022 and DOM APIs.
    "outDir": "./dist", // Redirects output structure to the specified directory.
    "rootDir": "./src", // Specifies the root directory of input files, controlling the output directory structure.
    "strict": true, // Enables all strict type-checking options.
    "esModuleInterop": true, // Enables emit interoperability between CommonJS and ES Modules via synthetic default imports.
    "skipLibCheck": true, // Skips type checking of declaration files.
    "forceConsistentCasingInFileNames": true, // Ensures that file names are treated with consistent casing.
    "resolveJsonModule": true, // Allows importing JSON files as modules.
    "sourceMap": true, // Generates corresponding '.map' files for debugging.
    "declaration": true, // Generates corresponding '.d.ts' files for TypeScript declaration.
    "declarationMap": true, // Generates source maps for declaration files.
    "noUnusedLocals": true, // Reports errors on unused local variables.
    "noUnusedParameters": true, // Reports errors on unused function parameters.
    "noImplicitReturns": true, // Reports errors for functions that do not return a value in all code paths.
    "noFallthroughCasesInSwitch": true // Reports errors for fallthrough cases in switch statements.
  },
  "include": ["src/**/*"], // Specifies the files to include in the compilation.
  "exclude": ["node_modules", "dist"] // Specifies the files to exclude from the compilation.
}
